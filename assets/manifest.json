{
  "manifest_version": 3,
  "name": "BGG Stats Extension",
  "version": "1.0",
  "description": "A Chrome extension that shows BGG game stats about games mentioned on the current page.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://boardgamegeek.com/*",
    "https://geek-export-stats.s3.amazonaws.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

